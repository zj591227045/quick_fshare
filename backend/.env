# Quick FShare 后端环境变量配置

# 服务器配置
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_SECRET=your-refresh-token-secret-change-this-in-production
REFRESH_TOKEN_EXPIRES_IN=7d

# 数据库配置
DATABASE_PATH=../database/quickfshare.db

# 文件上传配置
UPLOAD_PATH=../uploads
MAX_FILE_SIZE=104857600
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,txt,doc,docx,xls,xlsx,ppt,pptx,mp3,mp4,avi,mov,zip,rar

# 缩略图配置
THUMBNAIL_PATH=../data/thumbnails
THUMBNAIL_QUALITY=80
THUMBNAIL_MAX_SIZE=200
THUMBNAIL_CACHE_TTL=86400

# 日志配置
LOG_LEVEL=info
LOG_PATH=../data/logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=10
LOG_DATE_PATTERN=YYYY-MM-DD

# 安全配置
CORS_ORIGINS=http://localhost:3001,http://127.0.0.1:3001
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
SESSION_SECRET=your-session-secret-change-this-in-production
BCRYPT_ROUNDS=10

# SMB配置
SMB_TIMEOUT=30000
SMB_PACKET_CONCURRENCY=20
SMB_AUTO_CLOSE_TIMEOUT=30000

# NFS配置
NFS_TIMEOUT=30000
NFS_MOUNT_OPTIONS=ro,soft,intr
NFS_VERSION=v3

# 缓存配置
CACHE_TTL=3600
CACHE_CHECK_PERIOD=600

# 监控配置
MONITORING_ENABLED=true
STATS_UPDATE_INTERVAL=60000
HEALTH_CHECK_INTERVAL=30000

# 清理配置
AUTO_CLEANUP_ENABLED=true
CLEANUP_INTERVAL=86400
LOG_RETENTION_DAYS=30
THUMBNAIL_RETENTION_DAYS=7
SESSION_CLEANUP_INTERVAL=3600 