{
  "name": "quick-fshare-backend",
  "version": "1.0.0",
  "description": "Quick FShare 后端服务",
  "main": "server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "echo 'No build step needed for Node.js'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "init-db": "node scripts/init-db.js",
    "seed-db": "node scripts/seed-db.js",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix"
  },
  "keywords": [
    "file-sharing",
    "express",
    "sqlite"
  ],
  "author": "Quick FShare Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "bcrypt": "^5.1.0",
    "jsonwebtoken": "^9.0.0",
    "cors": "^2.8.5",
    "helmet": "^6.1.5",
    "express-rate-limit": "^6.7.0",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1",
    "joi": "^17.9.1",
    "mime-types": "^2.1.35",
    "express-validator": "^6.15.0",
    "dotenv": "^16.0.3",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "uuid": "^9.0.0",
    "node-cron": "^3.0.2",
    "node-cache": "^5.1.2"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "eslint": "^8.39.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ]
  }
} 